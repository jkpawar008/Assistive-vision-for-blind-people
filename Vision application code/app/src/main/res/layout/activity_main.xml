<RelativeLayout android:background="@drawable/images" android:layout_height="match_parent" android:orientation="vertical" android:weightSum="1" tools:context="com.ImageCaptioning.MainActivity" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <Button android:background="@android:drawable/ic_menu_gallery" android:layout_height="wrap_content" android:layout_width="wrap_content" android:visibility="invisible" android:textAppearance="@android:style/TextAppearance.DeviceDefault.DialogWindowTitle" android:elevation="0dp" android:layout_alignParentBottom="true" android:layout_alignParentStart="true" style="@android:style/Widget.Button.Small" android:id="@+id/id_btnSelect"/>

    <Button android:background="@android:drawable/ic_menu_camera" android:layout_height="wrap_content" android:layout_width="wrap_content" android:visibility="invisible" android:textAppearance="@android:style/TextAppearance.DeviceDefault.DialogWindowTitle" android:elevation="0dp" android:layout_alignParentBottom="true" style="@android:style/Widget.Button.Small" android:id="@+id/id_btnCamera" android:layout_alignParentEnd="true"/>

    <Button android:background="@android:drawable/ic_lock_silent_mode_off" android:layout_height="wrap_content" android:layout_width="wrap_content" android:visibility="invisible" android:layout_alignParentBottom="true" android:id="@+id/id_btnSpeak" android:layout_centerHorizontal="true"/>

    <ImageView android:layout_height="match_parent" android:layout_width="match_parent" tools:visibility="invisible" android:id="@+id/ivCaptured" android:contentDescription="TODO" android:scaleType="centerInside" android:minHeight="100dp" android:minWidth="100dp" android:maxHeight="256dp" android:maxWidth="256dp" android:gravity="center_horizontal" android:fadingEdge="horizontal|vertical" android:adjustViewBounds="false" android:layout_alignStart="@+id/tvlabel" android:layout_below="@+id/tvlabel" android:layout_above="@+id/id_btnSelect"/>

    <TextView android:layout_height="50dp" android:layout_width="match_parent" tools:visibility="visible" android:visibility="visible" android:layout_alignParentStart="true" android:id="@+id/tvlabel" android:layout_alignParentEnd="true" android:textStyle="normal|italic" android:textSize="14sp" android:textColor="#712323" android:fontFamily="serif" android:layout_marginEnd="-1dp" android:layout_marginTop="0dp" android:layout_marginStart="2dp" android:layout_alignParentTop="true"/>

    <FrameLayout android:layout_height="match_parent" android:layout_width="match_parent" android:layout_alignParentBottom="true" android:layout_alignParentStart="true" android:id="@+id/frameLayout" android:layout_alignParentEnd="true" android:layout_marginEnd="0dp" android:layout_marginTop="0dp" android:layout_marginStart="0dp" android:layout_marginBottom="0dp" android:layout_alignTop="@+id/ivCaptured"> </FrameLayout>

</RelativeLayout>